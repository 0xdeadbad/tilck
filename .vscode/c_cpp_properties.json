{
    "configurations": [
        {
            "name": "Linux",
            "intelliSenseMode": "clang-x64",
            "cStandard": "c11",
            "cppStandard": "c++11",
            "compileCommands": "${workspaceRoot}/build/compile_commands.json",

            "defines": [
                "__i386__"
            ],

            "includePath": [
                "${workspaceRoot}/include"
            ],

            "browse": {
                "path": [
                    "${workspaceRoot}/boot",
                    "${workspaceRoot}/include",
                    "${workspaceRoot}/kernel",
                    "${workspaceRoot}/unittests"
                ],
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": ""
            }
        }
    ],
    "version": 4
}
