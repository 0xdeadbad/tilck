   "version": "0.2.0",
   "configurations": [

      {
         "name": "(gdb) Tilck Kernel",
         "type": "cppdbg",
         "request": "launch",
         "program": "${workspaceFolder}/build/tilck_unstripped",
         "MIMode": "gdb",
         "miDebuggerServerAddress": "localhost:1234",
         "cwd": "${workspaceRoot}",
         "stopAtEntry": true
      },

      {
         "name": "(gdb) Tilck Unit Tests",
         "type": "cppdbg",
         "request": "launch",
         "program": "${workspaceFolder}/build/gtests",
         "MIMode": "gdb",
         "cwd": "${workspaceRoot}",
         "stopAtEntry": false
      },

      {
         "name": "(gdb) Busybox on Tilck",
         "type": "cppdbg",
         "request": "launch",
         "program": "${workspaceFolder}/toolchain/busybox/busybox_unstripped",
         "MIMode": "gdb",
         "miDebuggerServerAddress": "localhost:1234",
         "cwd": "${workspaceRoot}",
         "stopAtEntry": true
      }
   ]
}
